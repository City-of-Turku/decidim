<%= decidim_form_for(@form, url: voting_reminder_path, class: "form grid-container") do |form| %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title flex--sbc">
        Are you sure you want to send reminder to <%= @form.reminder_amount %> people?
      </h2>
    </div>
    <div class="card-section">
      <div class="row">
        <div class="columns small-12 text-center">
          <%= form.submit "Send" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
